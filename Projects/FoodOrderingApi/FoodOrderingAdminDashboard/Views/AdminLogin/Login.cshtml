                                                        <path d="M19 3H5c-1.11 0-2 .9-2 2v14c0 1.1.89 2 2 2h14c1.11 0 2-.9 2-2V5c0-1.1-.89-2-2-2zm-9 14l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"></path>
                                                    </svg>
                                                    <span class="MuiTouchRipple-root css-w0pj6f"></span>
                                                </span>
                                                <span class="MuiTypography-root MuiTypography-body1 MuiFormControlLabel-label css-5vqbp2">Remember me</span>
                                            </label>
                                        </div>
                                        <a class="MuiTypography-root MuiTypography-inherit MuiLink-root MuiLink-underlineAlways css-11obfmw" href="/#/auth/reset">Forgot your password?</a>
                                    </div>
                                    <div class="MuiBox-root css-0">
                                        <button class="MuiButtonBase-root MuiButton-root MuiButton-text MuiButton-textPrimary MuiButton-sizeMedium MuiButton-textSizeMedium MuiButton-root MuiButton-text MuiButton-textPrimary MuiButton-sizeMedium MuiButton-textSizeMedium jss13 css-grj8dm" tabindex="0" type="submit">
                                            Login
                                            <span class="MuiTouchRipple-root css-w0pj6f"></span>
                                        </button>
                                        @if (ViewData["ValidateMessage"] != null)
                                        {
                                            <br />
                                            <br />
                                            <label>@ViewData["ValidateMessage"]</label>
                                        }
                                    </div>
                                </form>
                                <div class="MuiBox-root css-1yuhvjn"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
