}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FoodOrderingAdminDashboard.styles.css" asp-append-version="true" />
</head>
<body class="bg-default">
    <div id="root" style="background:linear-gradient(237.49deg,#eef4fa .63%,#dee6ed 85.49%)">
        <div></div>
        <div class="MuiBox-root css-0">
            <div class="MuiBox-root css-0">
                <div class="MuiGrid-root MuiGrid-container css-13mpstx">
                    <div class="MuiGrid-root MuiGrid-item MuiGrid-grid-lg-5 css-dd594m">
                        <img src="~/img/loginpageicon.png" alt="login img" style="height: 50%; width: 70%; border-radius: 50px;" />
                    </div>
                    <div class="MuiGrid-root MuiGrid-item MuiGrid-grid-lg-7 css-td57ah">
                        <p class="MuiTypography-root MuiTypography-body1 css-18qppd8">Enter your details below</p>
                        <div class="jss2203 MuiBox-root css-1m3p9o7">
                            <div class="jss1203 MuiBox-root css-0">
                                <div class="jss3203 MuiBox-root css-0">
                                    <h6 class="MuiTypography-root MuiTypography-h6 jss5203 css-1bil0j5">Login to Food Ordering</h6>
                                </div>
                            </div>
                            <div class="jss4203 MuiBox-root css-0">
                                <form asp-controller="AdminLogin" asp-action="Login" method="post">
                                    <div class="MuiBox-root css-0">
                                        <p class="MuiTypography-root MuiTypography-body1 jss6203 css-5vqbp2">Email</p>
                                        <div class="MuiInputBase-root MuiInput-root MuiInputBase-colorPrimary jss9203 css-1k01ise" style="margin-top: -1px;">
