<script>
    $(document).ready(function () {
        // Attach a click event handler to the "SAVE" button
        $("#saveRestaurantSection").on("click", function () {
            // Define the data to send
            var selectedRestaurant = $('.restaurants-checkbox:checked').map(function () {
                return this.value;
            }).get();
            var restaurants = JSON.stringify(selectedRestaurant);
            //$('.restaurants-checkbox:checked').each(function () {
            //    restaurantArr = $(this).val();
            //});
            var dataToSend = {
                Name: $("#input-name").val(),
                Status: $('#restaurantSectionStatus').prop('checked') ? "Available" : "Not Available",
                Restaurants: restaurants
            };
            console.log(dataToSend);
            // Make an AJAX POST request to the server
            $.ajax({
                url: '/RestaurantSections/Create', // Replace with the actual URL where you want to send the data
                method: "POST",
                data: dataToSend,
                //contentType: "application/json", // Set content type to JSON
                success: function (response) {
                    // Handle the server's response here
                    console.log("Response from server:", response);
                    alert("Restaurant Sections created successfully");
                    location.reload(true);
                },
                error: function (error) {
                    // Handle any errors that occur during the AJAX request
                    console.error("Error:", error);
                    alert("Restaurant Sections not created!");
                }
            });
        });
    });
</script>

